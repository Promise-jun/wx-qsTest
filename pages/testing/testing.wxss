/* pages/testing/testing.wxss */
page {
  width: 100%;
  height: 100%;
  background-color: #DAECFF;
}
.bg-pic {
  width: 750rpx;
  height: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: -1;
}

.testing-box {
  width: 700rpx;
  padding: 60rpx 25rpx 0;
  display: flex;
  flex-direction: column;
}
.testing-title {
  width: 100%;
  height: 144rpx;
  position: relative;
  z-index: 1;
}
.testing-title image {
  display: block;
  width: 100%;
  height: 100%;
}
.testing-title text {
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  width: 100%;
  height: 120rpx;
  padding: 0 150rpx;
  position: absolute;
  top: 0;
  left: 0;
  text-align: center;
  font-family: PingFangSC-Semibold;
  font-size: 32rpx;
  color: #FFFFFF;
}

.testing-cont {
  width: 593rpx;
  min-height: 800rpx;
  background-color: #fff;
  margin: -80rpx auto 0;
  padding: 120rpx 16rpx 60rpx;
  font-family: PingFangSC-Semibold;
  position: relative;
}
.testing-cont .questions {
  padding-left: 24rpx;
  font-size: 16px;
  color: #303030;
}
.radio-group {
  display: flex;
  flex-direction: column;
  padding-top: 40rpx;
}
.radio-group .radio {
  margin: 10rpx 0;
  padding: 22rpx 24rpx;
  font-size: 14px;
  color: #303030;
  display: flex;
  align-items: center;
}
.radio-group .radio .circle {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 21rpx;
  height: 21rpx;
  border-radius: 50%;
  border: 3rpx solid #35A2F9;
  margin-right: 24rpx;
}
.radio-group .circle image {
  display: block;
  width: 17rpx;
  height: 17rpx;
}
.active-bg {
  background: #BADBFF;
  border-radius: 6px;
}

.btn-area {
  width: 100%;
  display: flex;
  justify-content: space-evenly;
  position: absolute;
  left: 0;
  bottom: 60rpx;
}
.btn-area button {
  padding: 0;
  margin: 0;
  width: 220rpx;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  font-size: 16px;
  color: #FFFFFF;
  background-image: linear-gradient(0deg, #3599F9 0%, #37CBF6 100%);
  border-radius: 4px;
}