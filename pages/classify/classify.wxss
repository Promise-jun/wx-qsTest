/* pages/classify/classify.wxss */

.classify-box {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-evenly;
  
}

.classify-item {
  width: 326rpx;
  height: 326rpx;
  margin-bottom: 38rpx;
  position: relative;
}
image {
  display: block;
  width: 100%;
  height: 100%;
}
.classify-item text {
  width: 100%;
  height: 100%;
  text-align: center;
  line-height: 326rpx;
  background: rgba(0,0,0,0.20);
  position: absolute;
  top: 0;
  left: 0;
  font-family: PingFangSC-Medium;
  font-size: 22px;
  color: #FFFFFF;
}