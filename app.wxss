.list-item {
  display: flex;
  margin: 0 15px;
  padding: 30rpx 0;
}
.list-item:not(:last-child) {
  border-bottom: 1px solid #EAEAEA;
}
.left-info {
  display: flex;
  flex-direction: column;
  flex: 1;
  font-family: PingFangSC-Medium;
  position: relative;
}
.left-info .title {
  font-size: 14px;
  color: #000000;
}
.left-info .small-title {
  font-size: 12px;
  color: #696969;
  padding-top: 8rpx;
}
.left-info .test-num {
  font-size: 12px;
  color: #919191;
  position: absolute;
  bottom: 2rpx;
}
.right-pic {
  padding-left: 15px;
  width: 80px;
  height: 80px;
}
.right-pic image {
  display: block;
  width: 100%;
  height: 100%;
  border-radius: 4px;
}